{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('solidCpServers') }}">{{ main_title }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('solidCpServers.show', {'id': solidcpServer.id}) }}">{{ solidcpServer.name }}</a></li>
        <li class="breadcrumb-item active">Create Hosting Space</li>
    </ol>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Create</button>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}

{% block javascripts %}
{#    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>#}
    {{ parent() }}
    <script type="module"> {# need type="module" for import #}
        import $ from 'jquery';
        $('#form_id_hosting_space').change(function () {
            let firstSelector = $(this);
            $("#form_name").val(firstSelector.find('option:selected').text());
        });
    </script>
{% endblock %}